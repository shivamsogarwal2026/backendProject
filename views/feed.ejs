<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 pt-10 py-8 text-white px-10  border-t-2 border-zinc-700">
        <div class="cards flex flex-wrap justify-evenly gap-10">
        <% if (posts && posts.length > 0) { %>
            <% posts.forEach(function(post) { %>
                <div class="card w-72">
                    <div class="w-full h-96 bg-sky-200 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>" alt="<%= post.title %>">
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No posts available.</p>
        <% } %>
        </div>
    </div>
<% include ./partials/footer.ejs %>
